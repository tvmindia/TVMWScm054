@model SCManager.UserInterface.Models.TechnicianSalaryViewModel
@using SCManager.UserInterface.App_Start
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/bootstrapdatepicker")

}

<div class="col-md-12">
    <div class="SCHeader col-md-6">
       Technician Salary Calculation
    </div>
    <div class="col-md-6">
        <div class="" id="btnPatchSalaryCalculation" style="min-height:25px">
            @{
                var data = new { ActionType = "Add" };
                @Html.Action("ChangeButtonStyle", "DailyServiceReport", data);
            }
        </div>
    </div>

</div>

<div class="container SCtabContainer">
    <ul class="nav nav-pills">
    </ul>
    <div class="tab-content clearfix">
        <div class="tab-pane fade in active" id="TechnicianSalary">

            <div class="col-md-12">
                <div class="col-md-12">&nbsp;</div>
                <div class="col-md-4">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="control-label">Month</label>
                            </div>
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.Month, Model.MonthList, "--Select Month--", new { @class = "form-control", @style = "padding:4px 12px;",@onChange = "ReferenceDateOnChange(this)" })
                            </div>
                            <div class="col-md-1 mandatory"></div>
                        </div>
                    </div>

                    <div class="col-md-12" style="padding-top:5px">
                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="control-label">Year</label>
                            </div>
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.Year, Model.YearList, "--Select Year--", new { @class = "form-control", @style = "padding:4px 12px;" })
                            </div>
                            <div class="col-md-1 mandatory"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">&nbsp;</div>

            <div class="col-md-12">

                <table id="tblSalaryCalculation" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr class="text-center">
                            <th>EmpID</th>
                            <th>Name</th>
                            <th>Total Comm.</th>
                            <th>Salary Adv.</th>
                            <th>Total Payable</th>
                            <th>Major</th>
                            <th>Major Comm.</th>
                            <th>Installation</th>
                            <th>Installation Comm.</th>
                            <th>Mandatory</th>
                            <th>Mandatory Comm.</th>
                            <th>Minor</th>
                            <th>Minor Comm.</th>
                            <th>Repeat</th>
                            <th>Repeat Comm.</th>
                            <th>Repeat Deduct</th>
                            <th>Repeat Deduct Comm.</th>
                            <th>Special Comm.</th>
                            <th>Service Charge Comm.</th>
                            <th>Product Comm.</th>
                            <th>AMC Comm.</th>

                        </tr>
                    </thead>
                </table>

            </div>
        </div>
      
    </div>
</div>
<div class="preloader" id="prelaoder">
    <img src="~/Content/images/loading.gif" class="preloaderImg" />
</div>




@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatableFixedColumns")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/bootstrapdatepicker")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/TechnicianSalaryCalcu")

}




