
@{
    ViewBag.Title = "AMC Base Summary";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using SCManager.UserInterface.App_Start
@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableButtons")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/bootstrapdatepicker")

}
<style>
    .totallabel {
    font-size: 15px;
    font-family: 'Segoe UI';
}

.totalfooter {
    font-weight: 500;
    font-size: 26px;
    font-family: 'Segoe UI';
}
</style>
<div class="col-md-12">
    <div class="SCHeader col-md-6">

    </div>
    <div class="col-md-6">

    </div>


</div>
<div id="exTab3" class="container SCtabContainer">
    <ul class="nav nav-pills"></ul>
    <div class="tab-content clearfix">
        <div class="tab-pane fade in active" id="stockList">
            <div class="col-md-12">&nbsp;</div>
            <div class="col-md-8 ">
                <div class="col-md-12 filterHead ">Filter</div>
                <div class="col-md-12 ">
                    <div id="external_filter" class="form-inline">
                        <label><b>From Date</b></label>
                        <input class="form-control datepicker" onchange="RefreshAMCBaseValueSummaryTable()" style="width:190px" value=@ViewBag.fromdate name="fromdate" id="fromdate" type="text">
                        <label><b>To Date</b> </label>
                        <input class="form-control datepicker" onchange="RefreshAMCBaseValueSummaryTable()" style="width:190px" value=@ViewBag.todate name="todate" id="todate" type="text">

                    </div>
                </div>
            </div>

            <div class="col-md-4 ">
                <div class="" id="btnPatchReport" style="min-height:25px">
                    @{
                        var data = new { ActionType = "List" };
                        @Html.Action("ChangeButtonStyle", "Report", data);
                    }
                </div>
            </div>

            <div class="col-md-12">&nbsp;</div>

            <div class="col-md-12">
                <div class="col-md-12 ReportHead">AMC Base Value Summary</div>
                <div class="container-fluid">
                    <div class="row">
                        <table id="tblAMCBaseValue" class="table compact" cellspacing="0" width="100%">
                            <thead>
                                <tr class="text-center">
                                  
                                    <th>ICR Date</th>
                                    <th>ICR #</th>
                                    <th>AMC #</th>
                                    <th>From Date</th>
                                    <th>To Date</th>
                                    <th>Technician</th>
                                    <th>Customer Name</th>
                                    <th style="text-align: center!important;">Base Amount(₹) <br />(A)</th>
                                    <th style="text-align: center!important;">Service Charge(₹) <br />(B)</th>
                                    <th style="text-align: center!important;">Discount(₹) <br />(C)</th>
                                    <th style="text-align: center!important;">Total(₹) <br />[D]=(A-C)</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                   
                </div>
                <div class="footer" style="padding-right: 0px;text-align: right;position: relative;width: 100%;bottom: 0px;">
                    <span class="totallabel">Total:</span>
                    <span id="lblsum" class="totalfooter"></span>
                </div>

            </div>


        </div>

    </div>
</div>

@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jsZip")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatableButtons")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/bootstrapdatepicker")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/AMCBaseSummary")
}

