
@{
    ViewBag.Title = "StockSummary";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/DataTables/css/datatableButtons")
    @Styles.Render("~/Content/bootstrapdatepicker")

}

<div class="col-md-12">
    <div class="SCHeader col-md-6">

    </div>
    <div class="col-md-6">

    </div>


</div>
<div id="exTab3" class="container SCtabContainer">
    <ul class="nav nav-pills"></ul>
    <div class="tab-content clearfix">
        <div class="tab-pane fade in active" id="stockList">
            <div class="col-md-12">&nbsp;</div>
            <div class="col-md-8 ">
                <div class="col-md-12 filterHead ">Filter</div>
                <div class="col-md-12 ">
                    <div id="external_filter" class="form-inline">
                        <label><b>From Date</b></label>
                        <input class="form-control datepicker" onchange="RefreshItemSummaryTable()" style="width:190px" name="fromdate" id="fromdate" type="Date">
                        <label><b>To Date</b> </label>
                        <input class="form-control datepicker" onchange="RefreshItemSummaryTable()" style="width:190px" name="todate" id="todate" type="Date">

                    </div>
                </div>
            </div>

            <div class="col-md-4 ">
                <div class="" id="btnPatchReport" style="min-height:25px">
                    @{
                        var data = new { ActionType = "List" };
                        @Html.Action("ChangeButtonStyle", "Report", data);
                    }
                </div>
            </div>

            <div class="col-md-12">&nbsp;</div>

            <div class="col-md-12">
                <div class="col-md-12 ReportHead">Stock Summary Report</div>
                <div class="container-fluid">
                    <div class="row">

                        <table id="tblItemList" class="table compact" cellspacing="0" width="100%">
                            <thead>
                                <tr class="text-center">
                                    <th style="display:none;">ID</th>
                                    <th>Sl No</th>
                                    <th>Item Code</th>
                                    <th>Description</th>
                                    <th>Category</th>
                                    <th>Stock Qty </th>
                                    <th>UOM</th>
                                    <th>Rate</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>


            </div>


        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/jsZip")
    @Scripts.Render("~/bundles/datatableButtons")
    @Scripts.Render("~/bundles/bootstrapdatepicker")
    @Scripts.Render("~/bundles/StockSummary")
}


