@model SCManager.UserInterface.Models.TechnicianPerformanceViewModel
@{
    ViewBag.Title = "TechnicianPerformance";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using SCManager.UserInterface.App_Start
@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableButtons")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/bootstrapdatepicker")
}
<style>
    table{
  margin: 0 auto;
  width: 100%;
  clear: both;
  border-collapse: collapse;
  table-layout: fixed;
  word-wrap:break-word;
}
</style>

<div class="col-md-12">
    <div class="SCHeader col-md-6">

    </div>
    <div class="col-md-6">

    </div>


</div>
<div id="exTab3" class="container SCtabContainer">
    <ul class="nav nav-pills"></ul>
    <div class="tab-content clearfix">
        <div class="tab-pane fade in active" id="stockList">
            <div class="col-md-12">&nbsp;</div>
            <div class="col-md-8 ">
                <div class="col-md-12 filterHead ">Filter</div>
                <div class="col-md-12 ">
                    <div class="col-md-4" style="padding-left: 0px;">
                        <div class="col-md-12" style="padding-left: 0px;">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="control-label">Technician</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.EmpID, Model.TechniciansList, "--Select Technician--", new {  @class = "form-control", @style = "padding:4px 12px;" })
                                </div>
                                @*<div class="col-md-1 mandatory"></div>*@
                            </div>
                        </div>
                        <div class="col-md-12" style="padding-left: 0px;">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="control-label">Month</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.Month, Model.MonthList, "--Select Month--", new { @Value = ViewBag.month, @class = "form-control", @style = "padding:4px 12px;" })
                                </div>
                                @*<div class="col-md-1 mandatory"></div>*@
                            </div>
                        </div>

                        <div class="col-md-12" style="padding-top:5px;padding-left: 0px;">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label class="control-label">Year</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.Year, Model.YearList, "--Select Year--", new { @Value = ViewBag.year, @class = "form-control", @style = "padding:4px 12px;" })
                                </div>
                                @*<div class="col-md-1 mandatory"></div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 ">
                <div class="" id="btnPatchReport" style="min-height:25px">
                    @{
                        var data = new { ActionType = "List" };
                        @Html.Action("ChangeButtonStyle", "Report", data);
                    }
                </div>
            </div>

            <div class="col-md-12">&nbsp;</div>

            <div class="col-md-12">
                <div class="col-md-12 ReportHead">Technician Performance</div>
                <div class="container-fluid">
                    <div class="row" id="DynamictblContainer">

                        <table id="tblTechnicianPerformanceList" class="table compact" cellspacing="0" width="100%">
                            <thead><tr class="text-center" id="trTechPerform"></tr></thead>
                            <tbody id="tbodyPerform"></tbody>
                        </table>
                    </div>
                </div>


            </div>


        </div>

    </div>
</div>

@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jsZip")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatableButtons")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/bootstrapdatepicker")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/TechnicianPerformance")
}

