
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/datatable")
    @Styles.Render("~/Content/bootstrapdatepicker")
   
}

<div class="col-md-12">
    <div class="SCHeader col-md-6">
        Stock Summary
    </div>
    <div class="col-md-6">
        <div class="" id="btnPatchReport" style="min-height:25px">

            @{
                var data = new { ActionType = "List" };
                @Html.Action("ChangeButtonStyle", "Report", data);
            }
        </div>
    </div>


</div>
<div id="exTab3" class="container SCtabContainer">
    <ul class="nav nav-pills">
       
    </ul>
    <div class="tab-content clearfix">
        <div class="tab-pane fade in active" id="stockList">
            <div class="col-md-12">&nbsp;</div>
            <div class="container-fluid">
                <div class="row">
                    <div id="external_filter" style="position: absolute;left: 258px;top: 160px;" class="form-inline"><label><b>Date From</b></label>
                        <input class="form-control datepicker" onchange="RefreshItemSummaryTable()" style="width:190px" name="fromdate" id="fromdate" type="Date">
                        <label><b>To Date</b> </label>
                        <input class="form-control datepicker" onchange="RefreshItemSummaryTable()" style="width:190px" name="todate" id="todate" type="Date">
                        <label id="dayscount" style="padding-left:10px"></label>
                        @*<b><a href="#" style="padding-left:10px" onclick="RefreshNotificationTable()"> APPLY</a></b>*@
                        <b><a href="#" style="padding-left:571px" onclick="UnderConstruction()"> Advanced filter</a></b>
                    </div>
                    <table id="tblItemList" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr class="text-center">
                                <th style="display:none;">ID</th>
                                <th>Sl No</th>
                                <th>Item Code</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Stock Qty </th>
                                <th>UOM</th>
                                <th>Rate</th>
                                <th>Value</th>
                           </tr>
                        </thead>
                    </table>
                </div>
            </div>
              
            
        </div>
    
    </div>
</div>








    @section Scripts {
        @Scripts.Render("~/bundles/datatable")
        @Scripts.Render("~/bundles/bootstrapdatepicker")
        @Scripts.Render("~/bundles/Report")
    }




