
@{
    ViewBag.Title = "StockLedger";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using SCManager.UserInterface.App_Start
@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion,"~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion,"~/bundles/jsZip")
    @Styles.RenderFormat(SiteKeys.StyleVersion,"~/bundles/datatableButtons")
    @Styles.RenderFormat(SiteKeys.StyleVersion,"~/Content/DataTables/css/datatableButtons")
    @Styles.RenderFormat(SiteKeys.StyleVersion,"~/Content/bootstrapdatepicker")

}

<div class="col-md-12">
    <div class="SCHeader col-md-6">

    </div>
    <div class="col-md-6">

    </div>


</div>
<div id="exTab3" class="container SCtabContainer">
    <ul class="nav nav-pills"></ul>
    <div class="tab-content clearfix">
        <div class="tab-pane fade in active" id="stockList">
            <div class="col-md-12">&nbsp;</div>
            <div class="col-md-8 ">
                <div class="col-md-12 filterHead ">Filter</div>
                <div class="col-md-12 ">
                    <div id="external_filter" class="form-inline">
                        <label><b>From Date</b></label>
                        <input class="form-control datepicker" style="width:190px" name="fromdate" onchange="RefreshLedgerTable()" id="fromdate" value=@ViewBag.fromdate type="text">
                        <label><b>To Date</b> </label>
                        <input class="form-control datepicker" style="width:190px" name="todate" onchange="RefreshLedgerTable()" id="todate" value=@ViewBag.todate type="text">
                    </div>
                </div>
               
            </div>

            <div class="col-md-4 ">
                <div class="" id="btnPatchReport" style="min-height:25px">
                    @{
                        var data = new { ActionType = "List" };
                        @Html.Action("ChangeButtonStyle", "Report", data);
                    }
                </div>
            </div>

            <div class="col-md-12">&nbsp;</div>

            <div class="col-md-12">
                <div class="col-md-12 ReportHead">Stock Ledger</div>
                <div class="container-fluid">
                    <div class="row">
                     
                        <table id="tblLedger" class="table compact" cellspacing="0" width="100%">
                            <thead>
                                
                                <tr class="text-center">
                                    <th>GroupCode</th>
                                    <th>SC Code</th>
                                    <th>Item Code</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th>Reference No</th>
                                    <th>Quantity</th>
                                    <th>Location</th>
                                    <th>Date</th>
                                </tr>

                            </thead>
                          
                        </table>
                    </div>
                </div>


            </div>


        </div>

    </div>
</div>

@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/jsZip")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/datatableButtons")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/bootstrapdatepicker")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/StockLedger")
}

