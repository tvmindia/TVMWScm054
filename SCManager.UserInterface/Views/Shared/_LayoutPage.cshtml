<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    <link rel="icon" type="image/png" href="~/Content/images/SCManager.png"/>
     
 
   
</head>
<body>
   
        <nav class="navbar navbar-default">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img height="30" alt="SCManager" src=@Url.Content("~/Content/images/SCManager.png")></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <br />

                @Html.Action("_MenuNavBar", "DynamicUI")

                <ul class="nav navbar-nav navbar-right">
                     <li ><a href="#" class="fa fa-user" style="color: #8fdd3c;">&nbsp;@User.Identity.Name</a></li>
                    <li class="dropdown" >
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret" style="color: #8fdd3c;"></span></a>
                        <ul class="dropdown-menu" >
                            <li><a href="#">User Profile</a></li>

                            <li role="separator" class="divider"></li>
                            <li><a href="/Account/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                            @*<li><a href="#" onclick="Logout()"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>*@
                        </ul>
                    </li>

                </ul>
            </div>



        </nav>

    
    <div class="container-fluid">
        @RenderBody()
    </div>

     
        <footer class="info small myfooter"  >
            <p> &nbsp; &nbsp; &copy;Thrithvam Technologies @DateTime.Now.Year</p>
        </footer>

   
    <!-- Modal -->
    <div class="modal fade" id="RedirectToLoginModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Warning</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div id="block_loginredirect">
                            <div>
                                <h2>Your session has been expired please login..!</h2>

                                <p>
                                    If you are the owner of the account and are regularly seeing this error, please read more about it in our <a href="http://www.partyec.com/support/">knowledgebase</a>.
                                    If you have any questions, please contact our Technical support team.
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button onclick="RedirectToLogin()" class="btn btn-lg btn-success" type="submit">LOGIN</button>
                    @*<a href="/Account/Logout" class="btn btn-primary" value="Login"/>*@
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrapdatepicker")
    @Scripts.Render("~/bundles/userpluginjs")
  
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        //function RedirectToLogin()
        //{
        //    var appAddress = window.location.protocol + "//" + window.location.host + "/";
        //    window.location = appAddress + "/Account/Logout/";
        //}
    </script>

</body>
 
</html>
