@using SCManager.UserInterface.App_Start
@{
    ViewBag.Title = "SC Manager";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="col-md-12">
    <div class="SCHeader col-md-6">Dashboard</div>
    <div class="container-fluid  col-md-6" ></div>
</div>


    <div class="row">

        <div class="">
            <div class="col-md-4">
                <div class="col-md-12">
                    <div class="panel-heading"><span class="fa fa-pie-chart">&nbsp;&nbsp;</span>Stock Value Summary</div>
                    <div class="panel panel-default panel-success DashboardSummary col-md-12">
                        <div class="col-md-12">&nbsp;</div>
                        <div class="col-md-6" style="text-align:center;vertical-align:middle;position:relative; z-index:1;">
                            <canvas id="myChartPie" height="190"></canvas>
                           
                        </div>
                        <div class="col-md-6 chart-legend"  height="190" id="Legend1" style="text-align:left;vertical-align:bottom"></div>
                        <p class="graphledger col-md-12">Total Stock Value  <span id="TotalStockValue"></span></p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="panel-heading"><span class="fa fa-bar-chart">&nbsp;&nbsp;</span>Weekly Sales Summary</div>
                    <div class="panel panel-default panel-success DashboardSummary">
                        <div class="col-md-12">&nbsp;</div>

                        <div class="col-md-12" style="text-align:center;vertical-align:middle">
                            <canvas id="myChart" class="" height="200"></canvas>

                        </div>

                        <p class="graphledger">Weekly Sales in thousands.</p>




                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <div class="panel-heading"><span class="fa fa-bell-o">&nbsp;&nbsp;</span>Re-Order Alert</div>
                    <div class="panel panel-default panel-success DashboardTech">
                        <div class="dashpanelbody">
                            @Html.Action("_ReorderAlertItems", "DynamicUI")


                        </div>



                    </div>
                </div>
                @*<div class="col-md-12">
                    <div class="panel-heading"><span class="fa fa-bookmark-o">&nbsp;&nbsp;</span>Dummy</div>
                    <div class="panel panel-default panel-success DashboardSummary">

                        <div class="panel-body">

                        </div>

                    </div>
                </div>*@
            </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <div class="panel-heading"><span class="fa fa-user-o">&nbsp;&nbsp;</span>Technician Summary</div>
                    <div class="panel panel-default panel-success DashboardTech">
                        <div class="dashpanelbody">
                            @Html.Action("_TechnicianSummary", "Technician")


                        </div>


                    </div>


                </div>
            </div>

        </div>
    </div>




    @section Scripts {
        @Scripts.RenderFormat(SiteKeys.ScriptVersion,"~/bundles/Dashboard")

    }
